<div id="timeline-timeline">
    {{# events }}
        <div class="card">
            <div class="timeline-picture">{{{ icon }}}</div>
            <div class="event-details">
                <p>
                    <strong>{{{ title }}}</strong><br/>
                    {{{ time }}}
                </p>
            </div>
            <div class="event-description">
                <p>{{{ description }}}</p>
            </div>
            {{# courselink }}
            <div class="card-footer">
                <p>{{{ courselink }}}</p>
            </div>
            {{/ courselink}}
        </div>
    {{/ events}}
</div>

<div><a href="#now"><strong>{{#str}}now, block_timeline{{/str}}</strong></a></div>
<div id="timeline-timeline">
    {{# previousevents }}
        <div class="card">
            <p>
                <strong>{{{ name }}}</strong><br/>
                {{{ time }}}
            </p>
            <p>{{{ description }}}</p>
        </div>
    {{/ previousevents}}
        <div class="card now">
            <strong>{{#str}}now, block_timeline{{/str}}</strong>
        </div>
    {{# events }}
        <div class="card">
            <div class="timeline-picture">{{{ icon }}}</div>
            <div class="event-details">
                <p>
                    <strong>{{{ title }}}</strong><br/>
                    {{{ time }}}
                </p>
            </div>
            <div class="event-description">
                <p>{{{ description }}}</p>
            </div>
            {{# courselink }}
            <div class="card-footer">
                <p>{{{ courselink }}}</p>
            </div>
            {{/ courselink}}
        </div>
    {{/ events}}
</div>
